<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="75dp"
                                                   android:layout_height="90dp"
                                                   android:background="@drawable/background_category"
                                                   android:elevation="3dp" android:layout_margin="5dp"
                                                   android:id="@+id/mainLayout">

    <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp" app:srcCompat="@drawable/cat_1" android:id="@+id/categoryImage"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.213"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/categoryName"
            app:layout_constraintTop_toBottomOf="@+id/categoryImage"
            app:layout_constraintStart_toStartOf="@+id/categoryImage"
            app:layout_constraintEnd_toEndOf="@+id/categoryImage"
            android:layout_marginTop="8dp" android:textStyle="bold" android:textColor="#6e6e70"/>
</androidx.constraintlayout.widget.ConstraintLayout>